<UserControl
	x:Class="XivToolsWpf.Controls.NumberBox"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
	HorizontalAlignment="Stretch"
	d:DesignWidth="128"
	Loaded="UserControl_Loaded"
	mc:Ignorable="d">

	<Grid x:Name="ContentArea">
		<Grid.ColumnDefinitions>
			<ColumnDefinition x:Name="SliderArea" Width="Auto" />
			<ColumnDefinition x:Name="InputBoxArea" Width="45" />
			<ColumnDefinition Width="Auto" />

		</Grid.ColumnDefinitions>

		<Slider
			x:Name="InputSlider"
			Grid.Row="0"
			Grid.Column="0"
			Margin="3,0,3,0"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Center"
			Focusable="False"
			IsSnapToTickEnabled="True"
			Maximum="{Binding SliderMaximum}"
			Minimum="{Binding SliderMinimum}"
			PreviewMouseDown="OnSliderPreviewMouseDown"
			PreviewMouseMove="OnSliderMouseMove"
			PreviewMouseUp="OnSliderPreviewMouseUp"
			TickFrequency="{Binding TickFrequency}"
			Value="{Binding SliderValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

		<TextBox
			x:Name="InputBox"
			Grid.Row="0"
			Grid.Column="1"
			Height="38"
			Margin="3,0,0,1"
			Padding="6,4"
			md:HintAssist.Hint="{Binding Hint}"
			LostFocus="OnLostFocus"
			LostKeyboardFocus="OnLostFocus"
			Style="{StaticResource MaterialDesignFilledTextBox}"
			Text="{Binding Text, UpdateSourceTrigger=PropertyChanged, FallbackValue=000.000}" />

		<Line
			x:Name="ErrorDisplay"
			Grid.Column="1"
			Margin="2,0,0,0"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Bottom"
			Stretch="Fill"
			Stroke="Red"
			StrokeThickness="1"
			Visibility="Collapsed"
			X1="0"
			X2="1" />

		<Grid x:Name="ButtonsArea" Grid.Column="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>

			<RepeatButton
				Grid.Column="0"
				Width="20"
				Margin="4,1,1,1"
				Padding="1"
				HorizontalContentAlignment="Center"
				Click="OnDownClick"
				Content="-"
				Style="{StaticResource TransparentRepeatButton}" />
			<RepeatButton
				Grid.Column="1"
				Width="20"
				Margin="1,1,0,1"
				Padding="1"
				HorizontalContentAlignment="Center"
				Click="OnUpClick"
				Content="+"
				Style="{StaticResource TransparentRepeatButton}" />

		</Grid>

	</Grid>
</UserControl>
